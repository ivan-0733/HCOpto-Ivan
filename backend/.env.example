# ======================================================
# Ejemplo de archivo .env para configuración del backend
# ======================================================

# Configuración del servidor
PORT=3000

# Credenciales de la Base de Datos
DB_HOST=localhost
DB_USER=app_user
DB_PASSWORD=la_contraseña_segura_que_creaste
DB_DATABASE=mi_proyecto

# Secreto para JWT (genera una cadena larga y aleatoria)
JWT_SECRET=un_secreto_muy_largo_y_dificil_de_adivinar
JWT_EXPIRES_IN=7d

# Ruta de guardado para las imágenes ¡IMPORTANTE!
IMAGE_UPLOAD_PATH=/path/de/tu/carpeta/uploads